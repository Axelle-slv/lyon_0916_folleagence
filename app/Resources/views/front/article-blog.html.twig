{% extends 'base.html.twig' %}

{% block title %}La Folle Agence | Blog {% endblock %}
{% block body %}
    <!-- Entête du site -->
    <section class="container-fluid" id="blog-article-header">
        <div class="row">
            <div class="col-xs-12 col-md-10 col-md-offset-1">
                <h1>Que vous propose <span id="prestation-pink-title">La Folle Agence</span> ?</h1>
            </div>
        </div>
    </section>

    <!-- Page Content -->
    <div class="container">
        <div class="row">
            <!-- Blog Post Content Column -->
            <div class="col-md-7 col-md-offset-1">
                <!-- Blog Post -->

                <!-- Title -->
                <h1 class="blogtitre">{{ post.title}}</h1>
                <hr>

                <!-- Date/Time -->
                <p><span class="glyphicon glyphicon-time"></span>{{ post.publicationDate|date }}</p>

                <!-- Preview Image -->
                <img class="img-responsive" src="http://placehold.it/900x300" alt="">

                <!-- Post Content -->
                <p class="lead">{{ post.content|raw }}</p>

                <!-- Pager -->
                <ul class="pager">
                    <li class="previous">
                        <a href="#">&larr; Titre article précédent</a>
                    </li>
                    <li class="next">
                        <a href="#">Titre article suivant &rarr;</a>
                    </li>
                </ul>
                <!-- Blog Comments -->

                <!-- Comments Form -->
                <div class="well">
                    <h4>Envie de réagir à cet article ? Déposez votre commentaire :</h4>
                    <form role="form" method="post">
                        <div class="form-group">
                            <input type="text" class="form-control" name="author" placeholder="Auteur du commentaire" />
                        </div>
                        <div class="form-group">
                            <input type="email" class="form-control" name="email" placeholder="E-mail" />
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="title" placeholder="Titre" />
                        </div>
                        <div class="form-group">
                            <textarea class="form-control" name="message" placeholder="Rédigez votre commentaire ici."></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Envoyer</button>
                    </form>
                </div>

                <!-- Posted Comments -->

                <!-- Comment -->
                {% for comment in comments %}
                <div class="media">
                    <div class="media-body">
                        <h4 class="media-heading">{{ comment.title }}
                            <small>{{ comment.author }} | {{ comment.date('Y-m-d H:i:s') }}</small>
                        </h4>
                        <p>{{ comment.content }}</p>
                    </div>
                </div>
                {% endfor %}
            </div>

            <!-- Blog Sidebar Widgets Column -->
            <div class="col-md-3 blog-cat">

                <!-- Blog Categories Well -->
                <div class="well">
                    <h4>Catégories</h4>
                    <div class="row">
                        <div class="col-lg-6">
                            <ul class="list-unstyled">
                                <li><a href="#">Category Name</a>
                                </li>
                                <li><a href="#">Category Name</a>
                                </li>
                                <li><a href="#">Category Name</a>
