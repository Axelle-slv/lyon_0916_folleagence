{% extends 'base.html.twig' %}

{% block title %}La Folle Agence | Blog {% endblock %}
{% block body %}
    <!-- Entête du site -->
    <section class="container-fluid" id="blog-article-header">
        <div class="row">
            <div class="col-xs-12 col-md-10 col-md-offset-1">
                <h1>Que vous propose <span id="prestation-pink-title">La Folle Agence</span> ?</h1>
            </div>
        </div>
    </section>

    <!-- Page Content -->
    <section id="article-content" class="white">
    <div class="container">
        <div class="row">
            <!-- Blog Post Content Column -->
            <div class="col-md-7 col-md-offset-1">
                <!-- Blog Post -->

                <!-- Title -->
                <h1 class="blogtitre">{{ post.title }}</h1>
                <hr>

                <!-- Date/Time -->
                <p><span class="glyphicon glyphicon-time"></span>{{ post.publicationDate|date }}</p>

                <!-- Preview Image -->
                <img class="img-responsive" src="http://placehold.it/900x300" alt="">

                <!-- Post Content -->
                <p class="lead">{{ post.content|raw }}</p>

                <!-- Pager -->
                <ul class="pager">
                    <li class="previous">

                        <a href="">Titre article précédent</a>

                    </li>
                    <li class="next">

                        <a href="">Titre article suivant</a>

                    </li>
                </ul>
                <!-- Blog Comments -->
                {% if post.openComment %}
                    <!-- Comments Form -->
                    <div class="well" id="commentForm">
                        <h4>Envie de réagir à cet article ? Déposez un commentaire :</h4>
                        {{ form_start(formComment) }}
                        {{ form_widget(formComment) }}
                        <input type="submit" value="Envoyer un commentaire" class="purple-button"/>
                        {{ form_end(formComment) }}
                    </div>

                    <!-- Posted Comments -->
                    <!-- Comment -->
                    <section id="comment-zone">
                        <h4>Ils ont commenté cette publication :</h4>
                        {% for comment in comments %}
                            {% if comment.approved %}
                                <div class="media">
                                    <div class="media-body">
                                        <h5 class="media-heading">{{ comment.title }}
                                            <small>{{ comment.author }}, le {{ comment.date|date ('d/m/Y')}}</small>
                                        </h5>
                                        <p>{{ comment.content }}</p>
                                    </div>
                                </div>

                                {% if (comment.myAnswer != '') %}
                                    <div class="commentAnswer">
                                        <h5 class="media-heading">Réponse de La Folle Agence :</h5>
                                        <p>{{ comment.myAnswer }}</p>
                                    </div>
                                {% endif %}
                            {% endif %}
                        {% endfor %}
                    </section>
                {% endif %}
            </div>


     <!-- Blog Sidebar Widgets Column -->
     <div class="col-md-3 blog-cat">

         <!-- Blog Categories Well -->
         <div class="well">
             <h4>Catégories</h4>
             <div class="row">
                 {% for category in categories %}
                     <div class="col-lg-12">
                         <ul class="list-unstyled">
                             <li>
                                 <a href="{{ path('lafolleagence_category_blog',{'categoryName': category.categoryName }) }}">{{ category.categoryName }}</a>
                             </li>
                         </ul>
                     </div>
                 {% endfor %}
             </div>
             <!-- /.row -->
         </div>

                <!-- Side Widget Well -->
                <div class="well">
                    <h4>Archives</h4>
                    {#Init var year#}
                    {% set year = '9999' %}
                    {#Loop for each post in archive#}
                    {% for post in archive %}
                    {#Test the current post year#}
                    {% if post.publicationDate|date('Y') < year %}
                    {#Test for close list not for the first time#}
                    {% if year != '9999' %}
                        </ul>
                    {% endif %}
                    <ul class="list-unstyled"> {{ post.publicationDate|date('Y') }}
                        {#the current post year become the test year#}
                        {% set year = post.publicationDate|date('Y') %}
                        {% endif %}
                        <li><a href="{{ path('lafolleagence_article_blog',{ 'link': post.link }) }}"
                               class="liencouleur">{{ post.title }}</a>
                        </li>
                        {% endfor %}
                    </ul>

                </div>

            </div>

        </div><!-- /.row -->
    </div><!-- /.container -->
    </section>
{% endblock %}
